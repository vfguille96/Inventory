<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vfguille.inventory">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_inventory"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_inventory_round"
        android:supportsRtl="true"
        android:theme="@style/AppThemeMaterial">
        <activity android:name=".ui.dash.login.SignUpActivity" android:label="@string/signup">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.dash.login.LoginActivity" />
        </activity>
        <activity android:name=".ui.dash.dash.DashBoardActivity" />
        <activity
            android:name=".ui.dash.login.LoginActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".ui.dash.splash.SplashActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>